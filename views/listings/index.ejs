<% layout('/layouts/boilerplate.ejs') %>
    
<div class="row row-cols-lg-3 row-cols-md-1 row-cols-sm-1 g-5">
    <% for (let list of allListings) { %>
        <div class="col">
            <a href="/listings/<%=list._id%>" class="text-decoration-none">
                <div class="card h-100 scale-hover">
                    <div class="card-img-overlay"></div>
                    <img src="<%= list.image.url %>" class="card-img-top" alt="<%= list.image.filename %>">
                    <div class="card-body">
                        <h5 class="card-title"><%= list.title %></h5>
                        <p class="card-text">&#8377;<%= list.price.toLocaleString('en-IN') %>/night</p>
                    </div>
                </div>
            </a>
        </div>
    <% } %>
</div>
